PORT=3001
NODE_ENV=development

# Data stores
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/amzpulse
REDIS_URL=redis://localhost:6379

# Auth and security
JWT_SECRET=replace-me-with-a-long-random-string

# Provider (optional: leave blank to use mock data)
PROVIDER_BASE_URL=
PROVIDER_API_KEY=
PROVIDER_RATE_LIMIT_PER_MIN=60

# API exposure (comma-separated origins, no trailing slash)
# Include both local dev and your deployed frontend host so CORS passes.
FRONTEND_URL=http://localhost:5173,http://127.0.0.1:5173,https://viraladmedia.github.io
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
CACHE_TTL_SECONDS=120
DB_FRESH_MS=300000

# Billing (optional: Stripe)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_PRO=

# Background sync
ENABLE_METRICS_SYNC=false
SYNC_CRON=*/15 * * * *
SYNC_BATCH_SIZE=10
SYNC_CONCURRENCY=3

# Supabase (optional)
SUPABASE_URL=
SUPABASE_PUBLIC_KEY=
