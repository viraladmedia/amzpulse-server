// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  
  watchlist WatchlistItem[]
  sourcing  SourcingNote[]
}

model Product {
  asin           String   @id
  title          String
  brand          String?
  image          String
  category       String
  subCategory    String?
  
  // Current Live Stats
  currentPrice   Decimal  @db.Decimal(10, 2)
  currentBsr     Int
  estSales       Int
  sellers        Int
  
  // Fees
  referralFee    Decimal  @db.Decimal(10, 2)
  fbaFee         Decimal  @db.Decimal(10, 2)
  
  // Dimensions
  weight         String?  // Stored as string "0.5 lbs" for now
  dimensions     String?

  // Risk Flags
  isHazmat       Boolean  @default(false)
  isIpRisk       Boolean  @default(false)
  isOversized    Boolean  @default(false)
  
  updatedAt      DateTime @updatedAt
  
  // Relations
  metrics        ProductMetric[]
  watchlistItems WatchlistItem[]
  sourcingNotes  SourcingNote[]
}

// Time-series snapshots for charts (History)
model ProductMetric {
  id        String   @id @default(uuid())
  productId String
  product   Product  @relation(fields: [productId], references: [asin])
  
  price     Decimal  @db.Decimal(10, 2)
  bsr       Int
  timestamp DateTime @default(now())
  
  @@index([productId, timestamp])
}

model WatchlistItem {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  productId  String
  product    Product  @relation(fields: [productId], references: [asin])
  
  targetPrice Decimal? @db.Decimal(10, 2)
  targetRoi   Decimal? @db.Decimal(10, 2)
  notes       String?
  
  createdAt   DateTime @default(now())
}

model SourcingNote {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  productId   String
  product     Product  @relation(fields: [productId], references: [asin])
  
  supplierUrl String?
  costPrice   Decimal  @db.Decimal(10, 2)
  minOrderQty Int?
}